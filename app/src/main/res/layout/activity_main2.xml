<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sport">








    <ImageView
        android:id="@+id/tmagotchi"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/tmagochi"
        />
    <TextView
        android:text="Режим:Часовой"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/day"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:text="День:"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="40dp"
            android:layout_height="100dp"/>
        <TextView
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="Голод:"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="100dp"/>
        <TextView
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Жажда:"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textColor="@color/white"
            android:text="Депрес.:"
            android:textSize="25dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/hunger_bar"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:max="100"
            android:textSize="40dp"
            android:text=" -"
            android:progress="50"
            android:layout_gravity ="left"
            android:orientation="horizontal"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/thirst_bar"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:max="100"
            android:textSize="40dp"
            android:text=" -"
            android:progress="50"
            android:layout_gravity ="center"
            android:orientation="horizontal"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/depression_bar"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:max="100"
            android:textSize="40dp"
            android:text=" -"
            android:progress="50"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:orientation="horizontal"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="0dp"

            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/feed_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:backgroundTint="@color/green"
                android:onClick="hungerButton"
                android:text="Кормить"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/water_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:onClick="waterButton"
                android:text="Поить"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/play_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/green"
                android:onClick="feedButton"
                android:text="Играть"

                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>